
<h1>Orders</h1>

<div class="container-fluid row">
  <% @orders.each do |order| %>
    <div class="col-sm">
      <div class="card border border-2 border-success p-1 mt-3" style="width: 18rem;">
        <div class="card-header fw-bold">
          <%= order.product_name %>
        </div>
        <div class="card-body">
          <%=order.customer.full_name %> is buying <%= order.product_count %>.
        </div>
        <div class="card-footer d-flex gap-2">
          <%= link_to "Show", order, class: "btn btn-primary" %>
          <%= link_to "Edit", edit_order_path(order), class: "btn btn-primary" %>
          <%= button_to "Delete", order, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<br>
  <%= link_to new_order_path, class: "btn btn-primary" do%>New order
     <%= icon('fa-solid', 'plus')%>
  <%end%>
  <%= link_to customers_path, class: "btn btn-primary" do%>
    <%= icon('fa-solid', 'arrow-left')%> Back to customers
  <%end%>


