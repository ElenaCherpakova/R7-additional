<p style="color: green"><%= notice %></p>

<h1>Customers</h1>


<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Number of Orders</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>
<tbody>
  <% @customers.each do |customer| %>
  <tr>
    <td>
      <%=customer.full_name%>
    </td>
    <td>
      <%=customer.orders.count%>
    </td>
    <td>
      <%= link_to "Show", customer, class: "btn btn-primary" %>
    </td>
    <td>
      <%= link_to "Edit", edit_customer_path(customer), class: "btn btn-primary" %>
    </td>
    <td>
      <%= button_to "Delete", customer, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-primary"%>
    </td>
  </tr>
  <% end %>
  <tbody>
</table>

<br>

<%= link_to "New customer", new_customer_path, class: "btn btn-primary" %>
